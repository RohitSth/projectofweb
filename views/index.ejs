<%- include('layout/header')%>

    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>
                        <div class="table-responsive">
                            <% if (users !="" ) { %>
                                <table class="table table-striped text-center">
                                    <th>
                                        <tr class="table-dark">
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Image</th>
                                            <th>Description</th>
                                            <th>Action</th>
                                        </tr>
                                    </th>
                                    <tbody>
                                        <% users.forEach((row, index)=> { %>
                                            <tr class="align-middle">
                                                <td><%= index %></td>
                                                <td><%= row.name %></td>
                                                <td><img src="<%= row.image %>" width="50" class="img-thumbnail"></td>
                                                <td><%= row.description %></td>
                                                <td>
                                                    <a class="text-success" href="/edit/<%= row._id %>"><i
                                                            class="fas fa-edit fa-lg mx-1"></i></a>
                                                    <a class="text-danger" href="/delete/<%= row._id %>"><i
                                                            class="fas fa-trash fa-lg mx-1"></i></a>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <h1 class="text-center text-secondary mt-5">No users found in the database!</h1>
                                    <% } %>

                        </div>
            </div>
        </div>
    </div>

    <%- include('layout/footer')%>